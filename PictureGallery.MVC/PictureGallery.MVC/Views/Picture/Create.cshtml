@using PictureGallery.Application.Picture
@model PictureDto
<h1>Create Car Workshop</h1>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form action="/Picture/Create" method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label class="control-label" for="Title">Title</label>
                <input class="form-control" type="text" id="Title" asp-for="Title" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="Description">Description</label>
                <input class="form-control" type="text" id="Description" asp-for="Description" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="file">Choose Image</label>
                <input class="form-control" type="file" id="file" accept="image/*" asp-for="ImageFile" />
            </div>

            <div class="form-group mb-3">
                <input class="btn btn-primary" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>
