@model PictureGallery.Domain.Entities.Picture

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Title Details</h1>

<div>
    <h4>Picture</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <img style="width: 18rem;" src="~/images/@Model.ImageName" />
    </dl>
</div>
<div>
    <a asp-controller="Picture" asp-action="Edit" asp-route-encodedTitle="@Model.EncodedTitle" class="btn btn-outline-secondary">Edit</a>
    <a asp-action="Index">Back to List</a>
</div>
