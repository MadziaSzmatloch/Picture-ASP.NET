@using PictureGallery.Application.Picture.Commands.CreatePicture

@model CreatePictureCommand
<h1>Create Car Workshop</h1>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form action="/Picture/Create" method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Title">Title</label>
                <input class="form-control" type="text" asp-for="Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="Description">Description</label>
                <input class="form-control" type="text" asp-for="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="ImageFile">Choose Image</label>
                <input class="form-control" type="file" accept="image/*" asp-for="ImageFile" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input class="btn btn-primary" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}